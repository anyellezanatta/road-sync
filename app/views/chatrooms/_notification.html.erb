<div class="notification">
<%= cl_image_tag @chatroom.messages.last.user.photo.key, crop: :fill, class:"avatar-bordered" %>
<div class="notification-content">
    <strong><%= @message.user.first_name %></strong>
    <small><i><%= @message.created_at.strftime("%a %b %e at %l:%M %p") %></i></small>
    <small><p><%= @message.content %></p>
  </div></small>
</div>
