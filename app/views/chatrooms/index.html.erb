<div class="container chatrooms-index">
  <div class="chatrooms-list">
    <% @chatrooms.each do |chatroom| %>
      <div class="chatroom">
        <div class="chatroom-content">
          <h2><%= chatroom.name %></h2>
          <p><%= chatroom.description %></p>
          <p><strong><%= chatroom.messages.count %></strong> messages</p>
        </div>
        <div class="chatroom-actions">
          <%= link_to "Join", chatroom_path(chatroom), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
