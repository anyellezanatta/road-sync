<%= simple_form_for :search, url: rides_path, method: :get, html: { class: "home-form" } do |f| %>
  <%= f.input :origin, input_html: { class: "input", placeholder: "Where are you starting from?" }, value: params[:origin], label: false, required: true %>
  <%= f.input :destination, input_html: { class: "input", placeholder: "Where are you going?" }, value: params[:destination], label: false, required: true %>
  <%= f.input :date, input_html: { class: "input", placeholder: "When are you going?", data: { controller: "datepicker" } }, value: params[:date], label: false, required: true %>
  <%= f.input :seats, input_html: { class: "input", placeholder: "How many passengers?"}, value: params[:passengers], label: false %>
  <%= f.button :submit, "Find a ride", class: "btn" %>
<% end %>
